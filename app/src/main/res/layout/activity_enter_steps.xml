<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/displayAllView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/enterTime"
            android:layout_width="140dp"
            android:layout_height="match_parent"

            android:layout_weight="@android:integer/config_longAnimTime"
            android:hint="Log Time"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/steps"
            android:layout_width="114dp"
            android:layout_height="43dp"

            android:hint="Enter Steps"
            android:textAlignment="center" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textAlignment="center" />
    </LinearLayout>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Selected Step" />

    <ListView
        android:id="@+id/listViewSteps"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:baselineAligned="false"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

</LinearLayout>